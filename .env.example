######################################
# Postgres Database
######################################

# Host for Postgres (on host: localhost, inside Docker network: hird-postgres)
POSTGRES_HOST=localhost

# Port mapping for Postgres on the host (5433 → 5432 in container)
POSTGRES_PORT=5433

# Database name
POSTGRES_DB=hird

# Default user and password (adjust if you change in docker-compose.yaml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Full connection URL for SQLAlchemy/Python clients (host machine access)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5433/hird


######################################
# pgAdmin (DB Management UI)
######################################

# Login email for pgAdmin UI
PGADMIN_EMAIL=someone@example.com

# Login password for pgAdmin UI
PGADMIN_PASSWORD=changeme

# Port on host → pgAdmin UI will be accessible at http://localhost:8081
PGADMIN_PORT=8081


######################################
# MinIO / S3 Storage
######################################

# MinIO API endpoint (S3-compatible object storage)
S3_ENDPOINT=http://localhost:9000

# MinIO access credentials (default if not overridden)
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Region (arbitrary for local, but some SDKs require it)
S3_REGION=us-east-1

# Buckets for ETL outputs
S3_BUCKET_RAW=hird-raw          # raw ingested data
S3_BUCKET_PROCESSED=hird-processed  # cleaned/normalized data
S3_BUCKET_ARTIFACTS=hird-artifacts  # models, feature sets, logs
S3_BUCKET_REPORTS=hird-reports      # dashboards/exports

# Optional prefix for raw files in MinIO
S3_RAW_PREFIX=raw
